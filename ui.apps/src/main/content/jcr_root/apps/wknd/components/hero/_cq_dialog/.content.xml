<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="WI Hero"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <heroStyleLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/text"
                        text="Hero style"/>
                    <heroStyleOptions
                        granite:hide="${cqDesign.titleHidden}"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/well"
                        fieldLabel="Chose Hero Version">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <dropdown
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Switch between two main hero types"
                                fieldLabel="Select Type"
                                name="./imageToRight">
                                <items jcr:primaryType="nt:unstructured">
                                    <default
                                        jcr:primaryType="nt:unstructured"
                                        text="Default"
                                        value="{Boolean}false"/>
                                    <product
                                        jcr:primaryType="nt:unstructured"
                                        text="Product"
                                        value="{Boolean}true"/>
                                </items>
                            </dropdown>
                            <colorPicker
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                fieldLabel="Hero Background Color"
                                icon="colorPalette"
                                name="./bgolor"
                                showDefaultColors="{Boolean}true"
                                showProperties="{Boolean}true"
                                showSwatches="{Boolean}false"
                                xtype="colorfield"/>
                            <hyperlink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/hyperlink"
                                fieldLabel="Hyperlink"
                                href="https://design.fmr.com/fds/foundations/color/"
                                icon="colorPalette"
                                iconSize="S"
                                name="./hyperlink"
                                target="_blank"
                                text=" FDS Core palette"/>
                        </items>
                    </heroStyleOptions>
                    <heroCopyLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/text"
                        text="Hero copy"/>
                    <herocopy
                        granite:hide="${cqDesign.titleHidden}"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/well"
                        fieldLabel="Chose Hero Version2">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <icon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldDescription="Select an icon from the DAM"
                                fieldLabel="Hero Icon"
                                name="./icon"
                                rootPath="/content/dam"/>
                            <eyebrow
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Leave empty to use the page title."
                                fieldLabel="Hero Eyebrow text"
                                name="./eyebrow"/>
                            <headline
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Leave empty to use the page title."
                                fieldLabel="Hero Headline"
                                name="./title"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Leave empty to use the page title."
                                fieldLabel="Hero Description"
                                name="./description"/>
                        </items>
                    </herocopy>
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs">
                        <items jcr:primaryType="nt:unstructured">
                            <image
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Image"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <inline
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}true"
                                                fieldDescription="Show or hide Hero image"
                                                name="./showImage"
                                                text="Show Image"
                                                uncheckedValue="{Boolean}false"
                                                value="{Boolean}true"/>
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="${not empty cqDesign.allowUpload ? cqDesign.allowUpload : false}"
                                                class="cq-droptarget"
                                                fieldLabel="Download Asset"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReference"
                                                mimeTypes="[image/*,video/*,audio/*,.pdf,.doc,.zip,.txt]"
                                                name="./file"
                                                title="Upload Asset"/>
                                        </items>
                                    </column>
                                </items>
                            </image>
                            <button
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Button"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <descriptionGroup
                                                granite:hide="${cqDesign.descriptionHidden}"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="30">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <CTA_x0020_Link
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="CTA Link"
                                                        fieldLabel="CTA Link"
                                                        name="./link"/>
                                                    <CTA_x0020_Text
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="CTA Text"
                                                        fieldLabel="CTA Text"
                                                        name="./ctatext"/>
                                                </items>
                                            </descriptionGroup>
                                        </items>
                                    </column>
                                </items>
                            </button>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
